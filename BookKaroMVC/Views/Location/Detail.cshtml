@model BookKaroMVC.ViewModels.VendorDetailViewModel
@{
    ViewBag.Title = "Detail";
}

<h2>Detail</h2>


<div id="content">
    <div class="container">
        <div class="row">
            <!-- begin:article -->
            <div class="col-md-9 col-md-push-3">
                <div class="row">
                    <div class="col-md-12 single-post">
                        <ul id="myTab" class="nav nav-tabs nav-justified">
                            <li class="active"><a href="#detail" data-toggle="tab"><i class="fa fa-university"></i> Location Detail</a></li>
                            <li><a href="#location" data-toggle="tab"><i class="fa fa-paper-plane-o"></i> Property Location</a></li>
                        </ul>

                        <div id="myTabContent" class="tab-content">
                            <div class="tab-pane fade in active" id="detail">
                                <div class="row">
                                    <div class="col-md-12">
                                        <h2>@Html.DisplayFor(modelItem => modelItem.VendorName)</h2>
                                        <div id="slider-property" class="carousel slide" data-ride="carousel">
                                            <ol class="carousel-indicators">

                                                @foreach (var item in Model.VendorImageSource)
                                                {
                                                    <li data-target="#slider-property" data-slide-to="0" class="">
                                                        <img src="@Url.Content("~/Content/Images/" + item)" alt="">
                                                    </li>
                                                }
                                                @*<li data-target="#slider-property" data-slide-to="0" class="">
                                                        <img src="img/img02.jpg" alt="">
                                                    </li>
                                                    <li data-target="#slider-property" data-slide-to="1" class="active">
                                                        <img src="img/img03.jpg" alt="">
                                                    </li>
                                                    <li data-target="#slider-property" data-slide-to="2">
                                                        <img src="img/img04.jpg" alt="">
                                                    </li>*@
                                            </ol>
                                            <div class="carousel-inner">

                                                <div class="item active">
                                                    <img src="@Url.Content("~/Content/Images/" + Model.VendorImageSource[0])" alt="">
                                                </div>
                                               @for (int i = 1; i < Model.VendorImageSource.Count; i++)

                                                {
                                                   <div class="item">
                                                        <img src="@Url.Content("~/Content/Images/" + Model.VendorImageSource[i])" alt="">
                                                    </div>
                                                }
                                               
                                            </div>
                                            <a class="left carousel-control" href="#slider-property" data-slide="prev">
                                                <span class="glyphicon glyphicon-chevron-left"></span>
                                            </a>
                                            <a class="right carousel-control" href="#slider-property" data-slide="next">
                                                <span class="glyphicon glyphicon-chevron-right"></span>
                                            </a>
                                        </div>
                                        <h3>Location Overview</h3>
                                        <table class="table table-bordered">
                                            <tr>
                                                <td width="20%"><strong>ID</strong></td>
                                                <td>#121</td>
                                            </tr>
                                            <tr>
                                                <td><strong>Rates</strong></td>
                                                <td>@Html.DisplayFor(model => model.VendorPriceRangeMinimum)Pkr - @Html.DisplayFor(modelItem => modelItem.VendorPriceRangeMaximum)Pkr </td>
                                                @*<td>$800,000</td>*@

                                                >
                                            </tr>
                                            <tr>
                                                <td><strong>Type</strong></td>
                                                <td>@Html.DisplayFor(modelItem => modelItem.MembershipDescription)</td>
                                            </tr>
                                            <tr>
                                                <td><strong>Contract</strong></td>
                                                <td>Sale</td>
                                            </tr>
                                            <tr>
                                                <td><strong>Location</strong></td>
                                                <td>@Html.DisplayFor(model => model.VendorAddress)</td>
                                            </tr>
                                            <tr>
                                                <td><strong>Bathrooms</strong></td>
                                                <td>4</td>
                                            </tr>
                                            <tr>
                                                <td><strong>Bedrooms</strong></td>
                                                <td>4</td>
                                            </tr>
                                            <tr>
                                                <td><strong>Area</strong></td>
                                                <td>800m<sup>2</sup> </td>
                                            </tr>
                                        </table>
                                        <h3>Property Features</h3>

                                        <div class="row">
                                            <div class="col-md-4 col-sm-4">
                                                <ul>

                                                    @foreach (var item in Model.Facility)
                                                    {
                                                       <li><i class="fa fa-check"></i>@Html.DisplayFor(model => model.Facility) </li>
                                                    }

                                              

                                                    @*<li><i class="fa fa-check"></i> Balcony</li>*@
                                                    @*<li><i class="fa fa-times"></i> Bedding</li>*@
                                                    @*<li><i class="fa fa-check"></i> Cable TV</li>*@
                                                    @*<li><i class="fa fa-times"></i> Cleaning after exit</li>*@
                                                    @*<li><i class="fa fa-check"></i> Cofee pot</li>
                                                    <li><i class="fa fa-check"></i> Computer</li>*@
                                                    @*<li><i class="fa fa-times"></i> Cot</li>*@
                                                </ul>
                                            </div>
                                            @*<div class="col-md-4 col-sm-4">
                                                <ul>
                                                    <li><i class="fa fa-check"></i> Internet</li>
                                                    <li><i class="fa fa-times"></i> Iron</li>
                                                    <li><i class="fa fa-check"></i> Juicer</li>
                                                    <li><i class="fa fa-times"></i> Lift</li>
                                                    <li><i class="fa fa-times"></i> Microwave</li>
                                                    <li><i class="fa fa-check"></i> Oven</li>
                                                    <li><i class="fa fa-times"></i> Parking</li>
                                                    <li><i class="fa fa-times"></i> Parquet</li>
                                                </ul>
                                            </div>*@
