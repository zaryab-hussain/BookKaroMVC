<!-- begin:modal-signin -->
<div class="modal fade" id="modal-signin" tabindex="-1" role="dialog" aria-labelledby="modal-signin" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button id="LinkButton1" type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Enter Your Details</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label id="Label1">Name</label>
                    <input type="text" id="SigninMail" class="form-control input-lg" placeholder="Enter Your Name">
                </div>
                <div class="form-group">
                    <label id="Label2">Contact Number</label>
                    <input type="text" id="SigninPass"  class="form-control input-lg" placeholder="Enter Your Number">
                </div>
                <div class="form-group">
                    <label id="Label3">Comment</label>
                    <input type="text" id="SigninPass" class="form-control input-lg" placeholder="Password">
                </div>
                <label for="Date">Date</label>

                <div class="input-group date" id="datetimepicker1">
                    @Html.TextBox("Date", null, new { @class = "form-control", name = "Date" })


                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
            <div class="modal-footer">
                <input type="submit" class="btn btn-success btn-block btn-lg" value="CheckOut">
            </div>
        </div>
    </div>
</div>
<!-- end:modal-signin -->
<script type="text/javascript">
    $(function ($) {
        $('#datetimepicker1').datetimepicker({
            format: 'DD-MM-YYYY'
        });
    });
      </script>
    <script>
        $(function ($) {
            $("#slider-range").slider({
                range: true,
                min: 1000,
                max: 500000,
                values: [1000, 1000],
                slide: function (event, ui) {
                    $("#BodyContent_amount").val("PKR" + ui.values[0] + " - PKR" + ui.values[1]);
                }
            });
            $("#BodyContent_amount").val("PKR" + $("#slider-range").slider("values", 0) +
              " - PKR" + $("#slider-range").slider("values", 1));
        });
</script>