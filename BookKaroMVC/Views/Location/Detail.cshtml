                                                    <li><i class="fa fa-check"></i> Use of pool</li>
                                                    <li><i class="fa fa-check"></i> Video</li>
                                                </ul>
                                            </div>*@
                                        </div>

                                        <h3>Property Description</h3>
                                        <p>
                                            @Html.DisplayFor(model => model.VendorDescription)
                                        </p>
                                        <p>
